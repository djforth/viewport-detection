{
  "name": "@djforth/viewport-detection",
  "version": "1.1.0",
  "description": "Viewport Detection",
  "main": "index.js",
  "scripts": {
    "build": "coffee --output lib --compile src",
    "test:mac": "asset-pipeline-karma -b",
    "test:watch": "asset-pipeline-karma -w",
    "test": "./node_modules/.bin/asset-pipeline-karma"
  },
  "assets": {
    "assets_in": "app/assets_uncompiled",
    "assets_out": "app/assets",
    "javascripts": {
      "ext": [
        ".coffee",
        ".es6.js",
        ".js"
      ],
      "transforms": [
        [
          "coffeeify",
          {
            "bare": false,
            "header": true
          }
        ],
        [
          "babelify",
          {
            "presets": [
              "es2015"
            ]
          }
        ]
      ]
    },
    "karma": {
      "externals": [
        "./node_modules/babel-polyfill/dist/polyfill.js"
      ],
      "input": "./spec",
      "specs": [
        "/*_spec.coffee"
      ],
      "transforms": [
        "coffeeify",
        [
          "babelify",
          {
            "presets": [
              "es2015",
              "react"
            ]
          }
        ],
        [
          "rewireify",
          {
            "ignore": "moof"
          }
        ]
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/djforth/viewport-detection.git"
  },
  "bugs": {
    "url": "https://github.com/djforth/viewport-detection/issues"
  },
  "keywords": [
    "Responsive",
    "Detection",
    "Angular",
    "Viewport"
  ],
  "author": "Adrian Stainforth",
  "license": "MIT",
  "homepage": "https://github.com/djforth/viewport-detection",
  "devDependencies": {
    "@djforth/ap_karma": "1.1.9",
    "@djforth/ap_utils": "^2.0.13",
    "angular": "^1.4.9",
    "angular-mocks": "^1.4.9",
    "angular-resource": "^1.4.9",
    "babel-polyfill": "^6.7.4",
    "coffee-script": "^1.10.0",
    "coffeeify": "^2.0.1",
    "lodash": "~4.6.1"
  },
  "peerDependencies": {
    "angular": "^1.4.9",
    "angular-resource": "^1.4.9",
    "lodash": "~4.6.1"
  }
}
